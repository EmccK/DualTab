{
  "manifest_version": 3,
  "name": "DualTab - 新标签页",
  "version": "1.0.0",
  "description": "简洁美观的新标签页扩展，复刻MonkNow风格",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    },
    "default_title": "添加书签到 DualTab"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://dualtab.emcck.com/*",
    "http://localhost:8080/*"
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}
